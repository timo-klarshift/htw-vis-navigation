package vis.lucene;

import java.io.File;
import java.io.IOException;

public class TemporaryIndex extends Indexer {

	public TemporaryIndex(File indexPath) {
		super(indexPath, true);
		// TODO Auto-generated constructor stub
	}
	
	public static TemporaryIndex create(String suffix){
		File tempPath;
		try {
			tempPath = File.createTempFile("temp-index", suffix);
			return new TemporaryIndex(tempPath);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return null;		
	}
	
	public static TemporaryIndex create(){
		return create("_undefined");
	}



}
