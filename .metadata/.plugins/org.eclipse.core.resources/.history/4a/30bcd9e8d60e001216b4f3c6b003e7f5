package vis.lucene;

import java.io.File;

public class TemporaryIndex extends Indexer {

	public TemporaryIndex(File indexPath) {
		super(indexPath, true);
		// TODO Auto-generated constructor stub
	}
	
	public static TemporaryIndex create(String suffix){
		File tempPath = File.createTempFile("temp-index", suffix);
		return new TemporaryIndex(tempPath);
	}



}
