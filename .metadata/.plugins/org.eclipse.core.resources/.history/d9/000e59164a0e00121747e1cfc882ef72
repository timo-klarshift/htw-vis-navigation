package vis.importer;

import java.io.File;

import logging.VisLog;
import vis.config.VisConfig;

public class InitialImporter {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// init logging
		VisLog.initLogging()
		
		// get config
		VisConfig config = VisConfig.load()
		
		// get CVS directory
		String csvDir = config.getDataPath() + "/" + config.data.csv.source.small.dir
		if(args.size() > 0){
			csvDir = args[0]
		}
		
		// get max files to process
		int max = 100
		if(args.size() > 1) {
			max = Integer.parseInt(args[1])
		}
		
		// get max files to process
		double minDF = config.importer.tagCollector.minDocFrequency
		if(args.size() > 2) {
			max = Double.parseDouble(args[2])
		}
		
		if(args.length == 0)
			createIndexFromCSV(new File(csvDir), max, minDF);
	}
	
	public static void createTestIndex(){
		
	}
	
	public static void createIndexFromCSV(File csvFolder, int maxFiles, float minDF){
		CSVReader r = new CSVReader(maxFiles);
		
		// 1st: collect tags
		CSVTagCollector col = new CSVTagCollector(minDF);
		r.setCallback(col);
		r.importDirectory(csvFolder);

		// 2nd: write to database
		CSVIndexWriter iw = new CSVIndexWriter(col);
		r.setCallback(iw);
		r.importDirectory(csvFolder);
	}

}
